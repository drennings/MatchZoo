{
  "net_name": "DRMM_TKS",
  "global":{
      "model_type": "PY",
      "weights_file": "examples/wikipassageqa_lnc2_test/weights/drmm_tks.wikipassageqa_lnc2_test.weights",
      "save_weights_iters": 10,
      "num_iters": 400,
      "display_interval": 10,
      "test_weights_iters": 400,
      "optimizer": "adadelta",
      "learning_rate": 1.0
  },
  "inputs": {
    "share": {
        "text1_corpus": "./data/WikiPassageQA_LNC2_TEST/corpus_preprocessed.txt",
        "text2_corpus": "./data/WikiPassageQA_LNC2_TEST/corpus_preprocessed.txt",
        "use_dpool": false,
        "embed_size": 300,
        "embed_path": "./data/WikiPassageQA_LNC2_TEST/embed_glove_d300",
        "vocab_size": 111166,
        "train_embed": false,
        "target_mode": "ranking",
        "text1_maxlen": 20,
        "text2_maxlen": 250
    },
    "train": {
        "input_type": "PairGenerator", 
        "phase": "TRAIN",
        "use_iter": false,
        "query_per_iter": 50,
        "batch_per_iter": 5,
        "batch_size": 100,
        "relation_file": "./data/WikiPassageQA_LNC2_TEST/relation_train.txt"
    },
    "valid": {
        "input_type": "ListGenerator", 
        "phase": "EVAL",
        "batch_list": 10,
        "relation_file": "./data/WikiPassageQA_LNC2_TEST/relation_valid.txt"
    },
    "test": {
        "input_type": "ListGenerator", 
        "phase": "EVAL",
        "batch_list": 10,
        "relation_file": "./data/WikiPassageQA_LNC2_TEST/relation_test.txt"
    },
    "predict": {
        "input_type": "ListGenerator", 
        "phase": "PREDICT",
        "batch_list": 10,
        "relation_file": "./data/WikiPassageQA_LNC2_TEST/relation_test.txt"
    }
  },
  "outputs": {
    "predict": {
      "save_format": "TREC",
      "save_path": "predict.test.drmm_tks.wikipassageqa_lnc2_test.txt"
    }
  },
  "model": {
    "model_path": "./matchzoo/models/",
    "model_py": "drmm_tks.DRMM_TKS",
    "setting": {
        "topk": 20,
        "num_layers": 2,
        "hidden_sizes": [5, 1] 
    }
  },
  "losses": [ 
    {
       "object_name": "rank_hinge_loss" ,
       "object_params": {
            "margin": 1.0
       }
    }
  ],
  "metrics": [ "ndcg@3", "ndcg@5", "map" ]
}

