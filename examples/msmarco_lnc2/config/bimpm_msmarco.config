{
  "net_name": "BiMPM",
  "global":{
      "model_type": "PY",
      "weights_file": "examples/msmarco_lnc2/weights/bimpm.msmarco.weights",
      "save_weights_iters": 10,
      "num_iters": 400,
      "display_interval": 10,
      "test_weights_iters": 400,
      "optimizer": "adadelta",
      "learning_rate": 1.0
  },
  "inputs": {
    "share": {
        "text1_corpus": "./data/MSMarco_LNC2/corpus_preprocessed.txt",
        "text2_corpus": "./data/MSMarco_LNC2/corpus_preprocessed.txt",
        "use_dpool": false,
        "embed_size": 300,
        "embed_path": "./data/MSMarco_LNC2/embed_glove_d300",
        "vocab_size": 111166,
        "train_embed": false,
        "target_mode": "ranking",
        "text1_maxlen": 10,
        "text2_maxlen": 40
    },
    "train": {
        "input_type": "PairGenerator",
        "phase": "TRAIN",
        "use_iter": false,
        "query_per_iter": 50,
        "batch_per_iter": 5,
        "batch_size": 100,
        "relation_file": "./data/MSMarco_LNC2/relation_train.txt"
    },
    "valid": {
        "input_type": "ListGenerator",
        "phase": "EVAL",
        "batch_list": 10,
        "relation_file": "./data/MSMarco_LNC2/relation_valid.txt"
    },
    "test": {
        "input_type": "ListGenerator",
        "phase": "EVAL",
        "batch_list": 10,
        "relation_file": "./data/MSMarco_LNC2/relation_test.txt"
    },
    "predict": {
        "input_type": "ListGenerator",
        "phase": "PREDICT",
        "batch_list": 10,
        "relation_file": "./data/MSMarco_LNC2/relation_test.txt"
    }
  },
  "outputs": {
    "predict": {
      "save_format": "TREC",
      "save_path": "predict.test.LNC2.ALL.bimpm.msmarco.txt"
    }
  },
  "model": {
    "model_path": "./matchzoo/models/",
    "model_py": "bimpm.BiMPM",
    "setting": {
        "hidden_size": 50,
        "channel": 50,
        "aggre_size": 50,
        "with_full_match": true,
        "with_maxpool_match": true,
        "with_attentive_match": true,
        "with_max_attentive_match": true,
        "dropout_rate": 0.5
    }
  },
  "losses": [
    {
       "object_name": "rank_hinge_loss" ,
       "object_params": {
            "margin": 1.0
       }
    }
  ],
  "metrics": [ "ndcg@3", "ndcg@5", "map" ]
}

